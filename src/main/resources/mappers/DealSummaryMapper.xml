<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.dong.sms.DealSummaryDAO">

    <select id="findUnnotifiedDeals" resultType="kr.co.dong.sms.DealSummary">
        SELECT id, title, url, notified
        FROM deal_summary
        WHERE notified = 0
    </select>

    <update id="markAsNotified">
        UPDATE deal_summary
        SET notified = 1
        WHERE id = #{id}
    </update>

</mapper>

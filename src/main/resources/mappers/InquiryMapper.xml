<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.dong.inquiry.InquiryDAO">

  <resultMap id="InquiryMap" type="kr.co.dong.inquiry.InquiryDTO">
    <id property="id" column="id"/>
    <result property="title" column="title"/>
    <result property="writer" column="writer"/>
    <result property="content" column="content"/>
    <result property="category" column="category"/>
    <result property="secret" column="secret"/>
    <result property="regdate" column="regdate"/>
    <result property="hit" column="hit"/>
    <result property="answer" column="answer"/>
    <result property="answer_date" column="answer_date"/>
    <result property="status" column="status"/>
  </resultMap>

  <insert id="insert" parameterType="kr.co.dong.inquiry.InquiryDTO">
    INSERT INTO inquiry
    (title, writer, content, category, secret, regdate, hit, status)
    VALUES (#{title}, #{writer}, #{content}, #{category}, #{secret}, NOW(), 0, '대기')
  </insert>

  <select id="list" resultMap="InquiryMap">
    SELECT * FROM inquiry ORDER BY id DESC
  </select>

  <select id="detail" parameterType="int" resultMap="InquiryMap">
    SELECT * FROM inquiry WHERE id = #{id}
  </select>

  <update id="updateHit" parameterType="int">
    UPDATE inquiry SET hit = hit + 1 WHERE id = #{id}
  </update>

  <update id="updateStatus" parameterType="map">
    UPDATE inquiry SET status = #{status} WHERE id = #{id}
  </update>

  <update id="insertAnswer" parameterType="map">
    UPDATE inquiry
    SET answer = #{answer}, answer_date = NOW()
    WHERE id = #{id}
  </update>

</mapper>

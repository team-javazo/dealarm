<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommentMapper">

  <resultMap id="CommentMap" type="kr.co.dong.inquiry.CommentDTO">
    <id property="id" column="id"/>
    <result property="inquiryId" column="inquiry_id"/>
    <result property="writer" column="writer"/>
    <result property="content" column="content"/>
    <result property="role" column="role"/>
    <result property="createdAt" column="created_at"/>
  </resultMap>

  <select id="list" parameterType="long" resultMap="CommentMap">
    SELECT * FROM inquiry_comment
     WHERE inquiry_id=#{inquiryId}
     ORDER BY created_at ASC
  </select>

  <insert id="add" parameterType="kr.co.dong.inquiry.CommentDTO">
    INSERT INTO inquiry_comment (inquiry_id, writer, content, role, created_at)
    VALUES (#{inquiryId}, #{writer}, #{content}, #{role}, NOW())
  </insert>

  <delete id="deleteById" parameterType="long">
    DELETE FROM inquiry_comment WHERE id=#{id}
  </delete>

  <delete id="deleteByOwner" parameterType="kr.co.dong.inquiry.CommentDTO">
    DELETE FROM inquiry_comment WHERE id=#{id} AND writer=#{writer}
  </delete>
</mapper>
